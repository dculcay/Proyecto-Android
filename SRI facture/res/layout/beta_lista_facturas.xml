<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:layout_y="2dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="5.54"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/android:list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/linea_oscura"
                android:layout_weight="1.29" >
            </ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.22"
            android:gravity="bottom" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="@string/act_add"
                android:orientation="vertical"
                android:paddingRight="@dimen/padding_small" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/ingresar_fact_up"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/tv_add"
                    android:textSize="@dimen/padding_large" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="@string/act_delete"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_small" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/eliminar_fact_up"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/tv_delete"
                    android:textSize="@dimen/padding_large" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="@string/act_menuprincipal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_small" >

                <TextView
                    android:id="@+id/textViewMP"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/menuprincipal_up"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/tv_menuprincipal"
                    android:textSize="@dimen/padding_large" />
            </LinearLayout>
            
            
        </LinearLayout>
    </LinearLayout>

</AbsoluteLayout>